<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción de ventana -->
    <record id="action_artistas" model="ir.actions.act_window">
        <field name="name">Artistas</field>
        <field name="res_model">galeria.artista</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer artista
            </p>
        </field>
    </record>

    <!-- Menú principal -->
    <menuitem 
        id="menu_galeria_principal" 
        name="Galería de Arte" 
        sequence="10"
    />
    
    <menuitem 
        id="menu_artistas" 
        name="Artistas" 
        parent="menu_galeria_principal" 
        action="action_artistas" 
        sequence="10"
    />

    <!-- Vista árbol (lista) -->
    <record id="view_artista_tree" model="ir.ui.view">
        <field name="name">galeria.artista.tree</field>
        <field name="model">galeria.artista</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="especialidad"/>
                <field name="email"/>
                <field name="activo"/>
            </tree>
        </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_artista_form" model="ir.ui.view">
        <field name="name">galeria.artista.form</field>
        <field name="model">galeria.artista</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="especialidad"/>
                            <field name="email"/>
                            <field name="telefono"/>
                        </group>
                        <group>
                            <field name="activo"/>
                        </group>
                    </group>
                    <group>
                        <field name="biografia" nolabel="1" placeholder="Biografía del artista..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
